/**app.wxss**/
.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  margin: 0;
  box-sizing: border-box;
} 

.topbar {
  width: 100%;
  height: 6%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
  align-items: center;
  justify-content: center;
  flex-direction: row;
  display: inline-flex;
}

.mainbar {
  width: 100%;
  height: 94%;
}

.back {
  width: 20%;
  height: 80%;
  margin: auto;
  padding: 2rpx;
  left: 2rpx;
  /* display: flex; */
  align-items: center;
  justify-content: center;
  text-align: center;
  vertical-align: middle;
  background-color: white;
  font-size: 30rpx;
  display: none;
}

.quit {
  width: 17%;
  height: 75%;
  border: 1rpx solid rgba(0, 0, 0, 0.137);
  border-radius: 15rpx;
  margin: 1rpx;
  padding: 2rpx;
  display: flex;
  right: 3rpx;
  align-items: center;
  justify-content: center;
  text-align: center;
  vertical-align: middle;
  background-color: white;
  font-size: 30rpx;
  transform: translateX(-10rpx)
}

.topbar-title{
  width: 100%;
  padding: 0;
  margin: 0;
  text-align: center;
  font-size: 45rpx;
}