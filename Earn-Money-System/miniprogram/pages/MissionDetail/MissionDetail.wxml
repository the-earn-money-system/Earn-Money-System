<!--pages/MissionDetail/MissionDetail.wxml-->
<view class="container">
  <view class="topbar">
    <button class="back">返回</button>
    <text class="topbar-title" >{{topbartitleinfo}}</text>
    <button class="quit">退出</button>
  </view>
  <view class="mainbar">
    <view id="Mission-Detail-view">
      <text class="mission-detail-info">任务名称：{{missionName}}</text>
      <text class="mission-detail-info">时间：{{time}}</text>
      <text class="mission-detail-info">报酬：{{pay}}</text>
      <text class="mission-detail-info">进度：{{progress}}</text>
      <textarea class="mission-detail-info" id="detail" disabled='true'>详情：{{detail}}</textarea>
    </view>
    <view wx:if="{{isUserPublisher==true}}">
      <button id="recompile-mission-button">重新编辑任务信息</button>
    </view>
    <view class="button-view">
      <button wx:if="{{isUserPublisher==true}}" class="mission-detail-button" id="button-cancel">取消发布</button>
      <button wx:else class="mission-detail-button" id="button-cancel">取消接受</button>
      <button class="mission-detail-button" id="button-submit">提交任务</button>
    </view>
  </view>
</view>

