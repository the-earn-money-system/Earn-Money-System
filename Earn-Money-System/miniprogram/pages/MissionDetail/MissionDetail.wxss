/* pages/MissionDetail/MissionDetail.wxss */
#Mission-Detail-view{
  width:100%;
  height: 80%;
  margin: auto;
  display: flex;
  flex-direction: column;
}

#recompile-mission-check{
  width: 100%;
}

#recompile-mission-button{
  width: 100%;
  background-color: white;
}

#recompile-mission-button:active{
  background-color: rgba(0, 0, 0, 0.089);
}

.mission-detail-button{
  position: absolute;
  display: inline-flex;
  bottom: 0;
  width: 100%;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.input-info{
  height: 20rpx;
  width: 100rpx;
}

.mission-detail-info{
  width: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
}

#detail{
  overflow: hidden;
  height: 450rpx;
  border-bottom: 0rpx solid rgba(0, 0, 0, 0.137);
}

#button-cancel{
  left: 0;
  width:50%;
}

#button-submit{
  right: 0;
  width:50%;
}