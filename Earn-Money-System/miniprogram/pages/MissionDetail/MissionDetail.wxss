/* pages/MissionDetail/MissionDetail.wxss */
#Mission-Detail-view{
  width:80%;
  height: 600rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.137);
  margin: auto;
  display: flex;
  flex-direction: column;
  transform: translateY(15%)
}

#recompile-mission-button{
  width: 80%;
  background-color: white;
  display: default; /* none if user isn't the publisher */
}

#recompile-mission-button:active{
  background-color: rgba(0, 0, 0, 0.089);
}

.mission-detail-button{
  position: absolute;
  display: inline-flex;
  bottom: 0;
  width: 100%;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.mission-detail-info{
  width: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
}

#detail{
  height: 100%;
  overflow: scroll;
  border-bottom: 0rpx solid rgba(0, 0, 0, 0.137);
}

#button-cancel{
  left: 0;
  width:50%;
}

#button-submit{
  right: 0;
  width:50%;
}