/* pages/AccountBalance/AccountBalance.wxss */
#account-balance{
  width:80%;
  height: 400rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.137);
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transform: translateY(30%)
}

.button-view{
  position: absolute;
  margin: auto;
  bottom: 30%;
  width: 100%;
  align-items: center;
  justify-content: center;
}

#recharge{
  width: 50%;
  background-color: white;
  border: 1rpx solid rgba(0, 0, 0, 0.137);
  color: red;
}

#cash-withdrawal{
  width: 50%;
  background-color: white;
  border: 1rpx solid rgba(0, 0, 0, 0.137);
  transform: translateY(100%);
  color: red;
}
