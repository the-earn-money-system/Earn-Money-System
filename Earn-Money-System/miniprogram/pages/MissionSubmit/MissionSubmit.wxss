/* pages/MissionSubmit/MissionSubmit.wxss */
.mission-info-line{
  width: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
}

.mission-info-area{
  width: 100%;
  height: 400rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
}

.mission-info-text{
  width: 100%;
  height: 20%;
  text-align: center;
  border-right: 1rpx solid rgba(0, 0, 0, 0.137);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.137);
}

.mission-info-input{
  height: 80%;
  width: 100%;
  overflow: scroll;
}


.mission-button{
  position: absolute;
  display: inline-flex;
  bottom: 0;
  width: 100%;
  align-items: center;
  justify-content: center;
  background-color: white;
}

#mission-cancel{
  left: 0;
  width:50%;
}

#mission-submit{
  right: 0;
  width: 50%;
}